<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SlayTheStats.Views.ChartView">
  <ScrollViewer>
  <StackPanel>
    <StackPanel Orientation="Horizontal">
      <ComboBox Items="{Binding Charts}" SelectedItem="{Binding SelectedChart}"/>
      <Button Command="{Binding ShowChart}">Show Chart</Button>
    </StackPanel>
    <ListBox Items="{Binding Items}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
  </StackPanel>
  </ScrollViewer>
</UserControl>
